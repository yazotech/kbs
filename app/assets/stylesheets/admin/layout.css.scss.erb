@import 'def_colors';

body{
	background-image: url(<%= asset_path 'admin/background.png' %>);
	padding:6px 20px 20px 20px;
	font: .75em "HelveticaNeue", "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.menu {display: none;}
a[rel='text'] {color:white;text-decoration:none;}
#page_header{
	background-color: $bg1;
	height:39px;
	width: 90%;
	margin:auto;
	border-bottom: solid 4px $bg3;
}
#page_breadcrumbs { 
	height: 20px;
	background-color: $bg2;
	ul {
		margin: 0;
		padding: 3px 0 2px 4px;
		list-style: none;
		li{float: left;margin-right: 4px;}
	}
}
#page_footer{
	background-color: $bg2;
	height:50px;
	margin: auto;
	width: 90%;
}
#page_body{
	background-color: $bg1;
	margin: auto;
	width: 90%;
}
.page_container {padding: 8px;}
#htmlbody{
background-color: $bg1;	
}
 .main_menu{
	padding-left:100px; padding: 20px;
}
.main_menu li{
	float: left;width:80px;
	border:solid 1px #ccc;list-style: none;
	text-align: center;
  a {
  	display:block;color:white;text-decoration: none;
  	&:hover {background-color:lightYellow; color:red;}
  }
}

.container {width:auto;}
fieldset{
	div{ white-space:nowrap;float:left;}
}