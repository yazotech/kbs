<h2><%= t(:channels) %></h2>
<div class="toolbar">
  <ul class='actions'>
    <li>
  <%= form_for [:admin, @search] do |f| %>
  渠道号: <%= f.text_field :channel_number_starts_with %>
  <%= f.submit '查找' %>
  <% end %>
    </li>
    <li>
      <%= link_to_with_icon('add', '检查产品', 'checkpro') %>
    </li>
    <li>
      <%= link_to_with_icon('add', 'NEW渠道', new_admin_channel_path, :remote => true) %>
    </li>
  </ul>
</div>
<%= will_paginate(@collection) %>
<table class='data-list'>
  <thead>
  <tr>
    <th><%= t('.channel_number') %></th>
    <th><%= t('.client') %></th>
    <th><%= t('.product') %></th>
    <th><%= t(:remark) %></th>
    <th><%= t(:status) %></th>
    <th><%= t(:updated_at) %></th>
    <th><%= t(:operates) %></th>
  </tr>
  </thead>
  <tbody>
  <% @collection.each do |channel| %>
   <%= render :partial =>'row', :locals => {:obj => channel} %>
  <% end %>
  </tbody>
</table>
<%= will_paginate(@collection) %>

<div class='dialog-window'></div>
<br />


