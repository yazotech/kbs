<%= form_for([:admin, @object], :remote => true) do |f| %>
<div class="field">
    <%= f.label '协议公司' %><br />
    <%= select_tag('agreement[company_id]', options_from_collection_for_select(@c, 'id', 'title'))%>
  </div>

<div class="field">
    <%= f.label '协议客户' %><br />
    <%= select_tag('agreement[client_id]', options_from_collection_for_select(@c1, 'id', 'name'))%>
  </div>
  <div class="field">
    <%= f.label '产品' %><br />
     <%= select_tag('agreement[product_id]', options_from_collection_for_select(@c2, 'id', 'title'))%>
  </div>
 <div class="field">
    <%= f.label '合约开始日期' %><br />
    <%= f.date_select :agreement_start %>
  </div>
   <div class="field">
    <%= f.label '合约结束日期' %><br />
    <%= f.date_select :agreement_end %>
  </div>
   <div class="field">
    <%= f.label '签订日期' %><br />
    <%= f.date_select :agreement_sign %>
  </div>
 <div class="field">
    <%= f.label '约定价格' %><br />
    <%= f.text_field :price %>
  </div>
   <div class="field">
    <%= f.label '状态' %><br />
   <%= f.radio_button :status, '0' %>
   <%= f.label 'status_0', '关闭' %>
   <%= f.radio_button :status, '1' %>
   <%= f.label 'status_1', '有效' %>    
  </div>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
