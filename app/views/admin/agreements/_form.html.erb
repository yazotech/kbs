<%= form_for([:admin, @object], :remote => true) do |f| %>
<div class="field">
    <%= f.label '协议公司' %><br />
    <%= f.select(:company_id, @company) %>
  </div>

<div class="field">
    <%= f.label '协议客户' %><br />
    <%= f.select(:client_id, @client) %>
  </div>
  <div class="field">
    <%= f.label '产品' %><br />
    <%= f.select(:product_id, @product) %>
  </div>
 <div class="field">
    <%= f.label '合约开始日期' %><br />
    <%= f.date_select :agreement_start %>
  </div>
   <div class="field">
    <%= f.label '合约结束日期' %><br />
    <%= f.date_select :agreement_end %>
  </div>
   <div class="field">
    <%= f.label '签订日期' %><br />
    <%= f.date_select :agreement_sign %>
  </div>
 <div class="field">
    <%= f.label '约定价格' %><br />
    <%= f.text_field :price %>
  </div>
   <div class="field">
    <%= f.label '状态' %><br />
   <%= f.radio_button :status, '0' %>
   <%= f.label 'status_0', '关闭' %>
   <%= f.radio_button :status, '1' %>
   <%= f.label 'status_1', '有效' %>    
  </div>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
